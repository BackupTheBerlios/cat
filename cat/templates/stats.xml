<patTemplate:tmpl name="stats">
	<br>
	<div align="center">
		<hr size="1">
		<font size="3" face="Verdana">
			<b>
				<i>
					Latest files:
				</i>
			</b>
		</font>
		<br>

		<table width="100%" border="0" cellspacing='.$cellspc.' cellpadding='.$cellpad.'>';
			<patTemplate:link src="filelist"/>
		</table>
	</div>

		Top 10 Accessed Files:
		<table width="100%" border="0" cellspacing='.$cellspc.' cellpadding='.$cellpad.'>';
			<patTemplate:link src="filelist"/>
		</table>
	</div>


	Top 10 Submitters:
	<table width="80%" border="0" cellspacing='.$cellspc.' cellpadding='.$cellpad.'>';
			<patTemplate:link src="filelist"/>
	</table>
	</div>

	<br>
	<hr size="1">
	<br>
	<div style="text-align:center; text-weight:bold">
		<patTemplate:link src="statentry"/>
	</div>
</patTemplate:tmpl>

<patTemplate:tmpl name="statentry">
	<span style="font-style:italic">{NAME}</span>{VALUE}<br>
</patTemplate:tmpl>